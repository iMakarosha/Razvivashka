<Window x:Class="Razvivashka.Lesson"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Razvivashka"
        mc:Ignorable="d"
        Title="Lesson" Height="460" Width="620">
    <DockPanel x:Name="dckpLesson">
        <Label x:Name="lbLessonName" DockPanel.Dock="Top" Content="" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <DockPanel DockPanel.Dock="Bottom" HorizontalAlignment="Stretch" Margin="10,6">
            <Label x:Name="lbTimer" DockPanel.Dock="Left" VerticalAlignment="Center" Margin="20,0,0,0"></Label>
            <WrapPanel DockPanel.Dock="Right" ItemHeight="20" ItemWidth="80" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>
                <Button Content="Button" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>
            </WrapPanel>
        </DockPanel>
        <Canvas x:Name="cnvLesson" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        </Canvas>
    </DockPanel>
</Window>
